#!/usr/bin/env python

import nibabel
import sys

file_in = sys.argv[1]
threshold = int(sys.argv[2])
file_out = sys.argv[3]

image = nibabel.load(file_in)
data = image.get_data()
idx_on = data[:,:,:] >= threshold
idx_off = data[:,:,:] < threshold
data[idx_on] = 1
data[idx_off] = 0
nibabel.save(image, file_out)
